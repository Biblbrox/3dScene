#version 330 core

// Texture coords
in vec2 TextureCoords;

// Texture number
uniform sampler2D TextureNum;
uniform bool isPrimitive;
uniform float alpha;

out vec4 FragColor;

void main()
{
    if (!isPrimitive) {
        FragColor = texture(TextureNum, TextureCoords);
    } else {
        FragColor = vec4(1, 0, 0, alpha);
    }
}